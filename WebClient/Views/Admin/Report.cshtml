@{
    ViewData["Title"] = "Выбор отчета";
}
<div class="text-center text-info">
    <h1>Выбор Отчета</h1>
</div>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="get">
    <div class="form-inline">
        @Html.ListBox("Report",
                                    new MultiSelectList(new string[] { "Отчет по перемещения продукции",
                                        "Отчет по работе сотрудников",
                 "Отчеты по договорам"}))

        <input type="submit" asp-action="ReportReport" value="Выбор отчета" class="btn btn-default" />
    </div>
</form>